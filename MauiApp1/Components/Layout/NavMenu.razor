@using MauiApp1.Services
@inject AppState appState

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MauiApp1</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@("Items?QString1=0")">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Items
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@("ItemsList?QString1=0")">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Items List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@("AddToCart?QString1=0")">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Shopping Cart
            </NavLink>
        </div>
    </nav>
</div>

@code
{
    protected override void OnInitialized()
    {
        appState.OnChange += StateHasChanged;
    }

    public void NavigateWithUniqueId(string baseUri)
    {
        var newUri = $"{baseUri}&UId={Guid.NewGuid()}";
        NavigationManager.NavigateTo(newUri, false);
    }
}
